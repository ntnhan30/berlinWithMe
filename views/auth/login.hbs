<!-- views/auth/signup.hbs -->


<div class="container">
  <h1>Login</h1>
<form action="/auth/login" method="POST" id="form-container">
  <div class="row">
    <div class="col-6">
      <div class="form-group">
    <label for="exampleInputPassword1">Username</label>
     <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
  </div>
   {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <button type="submit" class="btn btn-primary">login </button>
   <p class="account-message">
    Do you already have an account?
    <a class="btn btn-primary" href="/auth/signup">Singup</a>
  </p>
    </div>
  </div>
</form>

</div>
