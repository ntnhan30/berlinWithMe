<h1>The profile of <strong>{{user.username}}  </strong></h1>

<h3>About me </h3> <p> {{user.info}}</p><br>

 <img src="{{user.imgPath}}" alt="">

<h4>My events</h4>
<ul>
{{#each user._events}}<br>
<a href="/events/{{this._id}}">
{{this.name}}
</a>
{{/each}}
</ul>
<br><br>

{{#if isUser}}
<form  action="/{{user._id}}/delete" method="POST">
    <button >Delete</button>
    </form><br><br>
<a href="/profile/{{user._id}}/edit">Edit me!</a>
{{/if}}

