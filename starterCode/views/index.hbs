<h1>Berlin With Me</h1><br>

<form action="/search" method="get">
  <input type="text" name="event" placeholder="Event">
  <button>Search for event</button>
</form> <br>

{{#each events}}
<div class="eventDiv">
    <h3>
     <a href="/{{this._owner.username}}/events/{{this._id}}">
{{this.name}}
    </a> <br>
    </h3>
{{this.date}} <br>
<a href="{{this.link}}" target="_blank">Link to the event</a>
<br>
{{this.location}} <br>
<p>
    Organizer :{{this._owner.username}} <br>
</p>

</div>

{{/each}}
